programa
{
	
	funcao inicio()
	{
		inteiro anos, meses, dias, idadeDias

		escreva("\nInsira os anos: ")
		leia(anos)

		escreva("\nInsira os meses: ")
		leia(meses)

		escreva("\nInsira os dias: ")
		leia(dias)
		
		idadeDias = (anos * 365) + (meses * 30) + (dias)
		escreva(idadeDias)
				
	}
}
